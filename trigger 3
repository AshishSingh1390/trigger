tigger on account that add 'Premium' its first associate contact firstName if account totalRevenue more than equal 30000.
trigger updateConNameOnBasisOfAccAmn on Account (after insert,after update) {
    set<id> accId = new set <id>();
    for(account ac:trigger.new){
        if(ac.AnnualRevenue>=30000){
            accId.add(ac.Id);
        }
    }
    list <account> accList =[select id,(select id,firstName,createdDate from contacts order by createdDate asc)from account where id IN:accId];
    list <contact> conList = new list <contact>();
    for(account acc : accList){
        for(contact c: acc.contacts){
         acc.contacts[0].FirstName ='Premium'+ c.FirstName;
        conList.add(c);
        }
    }
    if(conList.size()>0){
        update conList;
    }

}
